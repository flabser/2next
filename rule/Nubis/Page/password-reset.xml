<?xml version="1.0" encoding="utf-8"?>
<rule type="page" id="password-reset" mode="on" anonymous="on">
	<description></description>
	<caching>NO_CACHING</caching>
	<xsltfile>password-reset.xsl</xsltfile>

	<element mode="ON" type="SCRIPT">
		<events>
			<doscript source="java_class">nubis.page.PasswordReset</doscript>
		</events>
	</element>

	<element mode="ON" type="INCLUDED_PAGE">
		<value>captions</value>
	</element>

	<caption name="pwd_recovery_title" />
	<caption name="pwd_recovery_description" />
	<caption name="pwd_recovery_new_pwd" />
	<caption name="pwd_recovery_btn_send" />
	<caption name="pwd_recovery_btn_ok" />
</rule>
