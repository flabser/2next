<?xml version="1.0" encoding="utf-8"?>
<rule type="page" id="password-recovery" mode="on" anonymous="on">
	<description></description>
	<rununderuser source="STATIC" type="TEXT">[observer]</rununderuser>
	<xsltfile>site/password-recovery.xsl</xsltfile>

	<element mode="ON" type="INCLUDED_PAGE">
		<name>welcome-site-inc</name>
		<value>welcome-site-inc</value>
	</element>
	<element mode="ON" type="SCRIPT">
		<name>password-recovery</name>
		<events>
			<doscript source="file">cashtracker.page.app.PasswordRecovery</doscript>
		</events>
	</element>

	<caption name="title" source="KEYWORD">Восстановление доступа</caption>
	<caption name="title_send_description" source="KEYWORD">
		На зарегистрированный e-mail будет отправлена ссылка для сброса
		пароля
	</caption>
	<caption name="title_pwd_description" source="KEYWORD">Введите новый пароль</caption>
	<caption name="btn_recovery_send" source="KEYWORD">Отправить</caption>
	<caption name="btn_recovery_pwd" source="KEYWORD">OK</caption>
</rule>
