<div class="form-wrapper">
    <form {{action 'save' on='submit' }}>
        <header class="content-header">
            <button class="btn-back" {{action 'close'}}>
                <i class="fa fa-chevron-left"></i>
            </button>
            <h1 class="header-title">
                {{t 'issue'}}
            </h1>
        </header>
        <section class="content-body">
            <fieldset class="fieldset">
                <div class="form-group {{if errors.body 'has-error'}}">
                    <div class="control-label">
                        {{t 'body'}}
                    </div>
                    <div class="controls">
                        {{textarea
                            value=issue.body
                            key-up='validateBody'
                            maxlength=2000
                            class='span5'}}
                        {{#each errors.body as |error|}}
                            <div class="error-message">{{error.message}}</div>
                        {{/each}}
                    </div>
                </div>
                <div class="form-group {{if errors.milestone 'has-error'}}">
                    <div class="control-label">
                        {{t 'milestone'}}
                    </div>
                    <div class="controls">
                        {{pikaday-input
                            value=issue.milestone
                            format='YYYY-MM-DD'
                            class='span2'}}
                        {{#each errors.milestone as |error|}}
                            <div class="error-message">{{error.message}}</div>
                        {{/each}}
                    </div>
                </div>
                <div class="form-group {{if errors.executor 'has-error'}}">
                    <div class="control-label">
                        {{t 'executor'}}
                    </div>
                    <div class="controls">
                        {{ember-selectize
                            content=users
                            optionValuePath='id'
                            optionLabelPath='login'
                            selection=issue.executor
                            placeholder='-'
                            class='span5'}}
                        {{#each errors.executor as |error|}}
                            <div class="error-message">{{error.message}}</div>
                        {{/each}}
                    </div>
                </div>
                <div class="form-group {{if errors.tags 'has-error'}}">
                    <div class="control-label">
                        {{t 'tags'}}
                    </div>
                    <div class="controls">
                        {{ember-selectize
                            content=tags
                            multiple=true
                            optionValuePath='id'
                            optionLabelPath='name'
                            selection=issue.tags
                            placeholder='-'
                            class='span5'}}
                    </div>
                </div>
            </fieldset>
        </section>
        <footer class="content-actions">
            <button class="btn" {{action 'close'}}>{{t 'close'}}</button>
            <button type="submit" class="btn btn-primary">{{t 'save'}}</button>
        </footer>
    </form>
</div>
