<div class="form-wrapper">
    <form {{action 'save' on='submit' }}>
        <header class="content-header">
            <button class="btn-back" {{action 'close'}}>
                <i class="fa fa-chevron-left"></i>
            </button>
            <h1 class="header-title">
                {{t 'issue'}}
            </h1>
        </header>
        <section class="content-body">
            <fieldset class="fieldset">
                <div class="form-group {{if errors.body 'has-error'}}">
                    <div class="control-label">
                        {{t 'body'}}
                    </div>
                    <div class="controls">
                        {{tn-input
                            value=issue.body
                            key-up='validateBody'
                            maxlength='64'
                            class='span5'}}
                        {{#each errors.body as |error|}}
                            <div class="error-message">{{error.message}}</div>
                        {{/each}}
                    </div>
                </div>
                <div class="form-group {{if errors.milestone 'has-error'}}">
                    <div class="control-label">
                        {{t 'milestone'}}
                    </div>
                    <div class="controls">
                        {{tn-input
                            value=issue.milestone
                            key-up='validateMilestone'
                            maxlength='64'
                            class='span5'}}
                        {{#each errors.milestone as |error|}}
                            <div class="error-message">{{error.message}}</div>
                        {{/each}}
                    </div>
                </div>
                <div class="form-group {{if errors.executor 'has-error'}}">
                    <div class="control-label">
                        {{t 'executor'}}
                    </div>
                    <div class="controls">
                        {{tn-input
                            value=issue.executor
                            key-up='validateEexecutor'
                            maxlength='64'
                            class='span5'}}
                        {{#each errors.executor as |error|}}
                            <div class="error-message">{{error.message}}</div>
                        {{/each}}
                    </div>
                </div>
                <div class="form-group {{if errors.tags 'has-error'}}">
                    <div class="control-label">
                        {{t 'tags'}}
                    </div>
                    <div class="controls">
                        {{tn-input
                            value=issue.tags
                            key-up='validateTags'
                            maxlength='64'
                            class='span5'}}
                        {{#each errors.tags as |error|}}
                            <div class="error-message">{{error.message}}</div>
                        {{/each}}
                    </div>
                </div>
            </fieldset>
        </section>
        <footer class="content-actions">
            <button class="btn" {{action 'close'}}>{{t 'close'}}</button>
            <button type="submit" class="btn btn-primary">{{t 'save'}}</button>
        </footer>
    </form>
</div>
