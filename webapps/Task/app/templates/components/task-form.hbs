<div class="form-wrapper">
    <form {{action 'save' on='submit' }}>
        <header class="content-header">
            <button class="btn-back" {{action 'close'}}>
                <i class="fa fa-chevron-left"></i>
            </button>
            <h1 class="header-title">
                {{t 'task'}}
            </h1>
        </header>
        <section class="content-body">
            <fieldset class="fieldset">
                <div class="form-group {{if errors.name 'has-error'}}">
                    <div class="control-label">
                        {{t 'name'}}
                    </div>
                    <div class="controls">
                        {{tn-input
                            value=task.name
                            key-up='validateName'
                            maxlength='64'
                            class='span5'}}
                        {{#each errors.name as |error|}}
                            <div class="error-message">{{error.message}}</div>
                        {{/each}}
                    </div>
                </div>
                <div class="form-group {{if errors.deadline 'has-error'}}">
                    <div class="control-label">
                        {{t 'deadline'}}
                    </div>
                    <div class="controls">
                        {{pikaday-input
                            value=task.deadline
                            format='YYYY-MM-DD'
                            class='span2'}}
                        {{#each errors.deadline as |error|}}
                            <div class="error-message">{{error.message}}</div>
                        {{/each}}
                    </div>
                </div>
            </fieldset>
        </section>
        <footer class="content-actions">
            <button class="btn" {{action 'close'}}>{{t 'close'}}</button>
            <button type="submit" class="btn btn-primary">{{t 'save'}}</button>
        </footer>
    </form>
</div>
