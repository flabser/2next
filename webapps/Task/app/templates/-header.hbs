<header class="header navbar">
    <div class="container">
        {{content-overlay action='hideOpenedNav'}}
        <div class="navbar-header">
            <button class="sidebar-toggle" type="button" {{action 'navAppMenuToggle' }}></button>
            <div class="navbar-brand">
                <img alt="logo" src="img/logo.png" class="brand-logo" />
                <span class="brand-title">{{t 'brand'}}</span>
            </div>
        </div>
        <nav class="navbar-nav navbar-right">
            <button class="nav-item nav-btn" type="button" {{action 'toggleDevice'}}>
                <i class="fa fa-mobile"></i>
            </button>
            <button class="nav-item nav-btn compose-new" type="button" {{action 'composeRecord'}}>
                <i class="fa fa-plus"></i>
            </button>
            <button class="nav-item nav-btn nav-search-toggle" type="button" {{action 'toggleSearchForm' on='mouseDown' }}>
                <i class="fa fa-search"></i>
            </button>
            <div class="nav-item nav-search" id="head-search-block">
                <form class="search-form" role="search" onsubmit="alert('кручу-верчу найти хочу'); return false;">
                    <button class="search-toggle-back" type="button" {{action 'toggleSearchForm' on='mouseDown' }}>
                        <i class="fa fa-chevron-left"></i>
                    </button>
                    {{input type='search' name='keyword' class='search-keyword' placeholder='Search'}}
                    <button type="submit" class="search-btn">
                        <i class="fa fa-search"></i>
                    </button>
                </form>
            </div>
            <div class="nav-item nav-profile dropdown">
                <div class="dropdown-toggle" data-toggle="dropdown">
                    <span class="user-avatar">
                        <i class="fa fa-user"></i>
                    </span>
                </div>
                <ul class="dropdown-menu right">
                    <li class="profile">
                        {{#link-to 'user_profile'}}
                            <i class="fa fa-cog"></i><span>{{model.login}}</span>
                        {{/link-to}}
                    </li>
                    {{#if loginThroughToken}}
                        <li class="divider"></li>
                        <li>
                            <a href="rest/workspace/url" class="ws">
                                <i class="fa fa-desktop"></i><span>{{t 'workspace'}}</span>
                            </a>
                        </li>
                    {{/if}}
                    <li class="divider"></li>
                    <li>
                        <a href="#" {{action 'logout'}} class="logout">
                            <i class="fa fa-sign-out"></i><span>{{t 'logout'}}</span>
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
        <nav class="navbar-nav navbar-link nav-app">
            {{#link-to 'dashboard' class='nav-item'}}
                <i class="fa fa-dashboard"></i><span>{{t 'dashboard'}}</span>
            {{/link-to}}
            {{#link-to 'tasks' class='nav-item'}}
                <i class="fa fa-check-square-o"></i><span>{{t 'tasks'}}</span>
            {{/link-to}}
            <div class="nav-item dropdown">
                <div class="dropdown-toggle" data-toggle="dropdown">
                    <i class="fa fa-angle-down"></i>
                </div>
                <ul class="dropdown-menu">
                    <li>
                        {{#link-to 'categories'}}
                            <i class="fa fa-sitemap"></i><span>{{t 'categories'}}</span>
                        {{/link-to}}
                    </li>
                    <li>
                        {{#link-to 'users'}}
                            <i class="fa fa-users"></i><span>{{t 'users'}}</span>
                        {{/link-to}}
                    </li>
                </ul>
            </div>
        </nav>
    </div>
</header>
