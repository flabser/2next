<div class="view">
    <header class="content-header">
        <h1 class="header-title">{{t 'tasks'}}</h1>
        <nav class="content-actions on-desktop">
            <button class="btn" {{action 'composeRecord'}}>
                <i class="fa fa-plus"></i>{{t 'add'}}
            </button>
        </nav>
    </header>
    <section class="content-body">
        <header class="entries-head">
            <div class="head-wrap">
                <label class="entry-select">
                    <input type="checkbox" class="all" {{action 'selectAll'}} />
                </label>
                <div class="entry-captions">
                    <span>
                        {{t 'name'}}
                    </span>
                </div>
            </div>
        </header>
        <div class="entries">
            {{#each model as |task|}}
                {{#unless task.isNew}}
                <div class="entry-wrap">
                    <div class="entry-actions">
                        <button class="entry-action action-delete" {{action 'deleteRecord' task}}>
                            <i class="fa fa-trash" />
                        </button>
                    </div>
                    {{#tn-swipe-entry class='entry'}}
                        <label class="entry-select">
                            <input type="checkbox" value="{{task.id}}" {{action 'selectOne'}} />
                        </label>
                        {{#link-to 'tasks.task' task class='entry-link'}}
                        <div class="entry-fields">
                            <span>
                                {{task.name}}
                            </span>
                        </div>
                        {{/link-to}}
                    {{/tn-swipe-entry}}
                </div>
                {{/unless}}
            {{/each}}
        </div>
    </section>
</div>
