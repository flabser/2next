<div>
	<h1>Application {{model.appName}}</h1>
	<form class="form-horizontal">
		<div class="form-group">
			<label for="inputAppType" class="control-label col-xs-2">Type</label>
			<div class="col-xs-5">{{input class="form-control" name="userName" value=model.appType disabled=true}}</div>
    	</div>
		<div class="form-group">
			<label for="inputAppType" class="control-label col-xs-2">Name</label>
			<div class="col-xs-5">{{input class="form-control" name="userName" value=model.appName required=true}}</div>
    	</div>
    	<div class="form-group">
			<label for="inputAppType" class="control-label col-xs-2">Owner</label>
			<div class="col-xs-5">{{input class="form-control" name="userName" value=model.owner required=true}}</div>
    	</div>
  		 <div class="form-group">
			<label for="inputAppType" class="control-label col-xs-2">Database host</label>
			<div class="col-xs-5">{{input class="form-control" name="userName" value=model.dbHost required=true}}</div>
    	</div>
  		 <div class="form-group">
			<label for="inputAppType" class="control-label col-xs-2">Database login</label>
			<div class="col-xs-5">{{input class="form-control" name="userName" value=model.dbLogin required=true}}</div>
    	</div>
    	 <div class="form-group">
			<label for="inputAppType" class="control-label col-xs-2">Database name</label>
			<div class="col-xs-5">{{input class="form-control" name="userName" value=model.dbName required=true}}</div>
    	</div>
    	<div class="action-bar">
        	<button class="btn btn-primary" {{action 'save' this}}>Save & Close</button>
        	<a class="btn" href="#/apps">Cancel</a>
    	</div>
    </form>
</div>